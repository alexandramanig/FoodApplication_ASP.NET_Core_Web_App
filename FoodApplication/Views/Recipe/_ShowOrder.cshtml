@model FoodApplication.Models.OrderRecipeDetails

<div class="container-fluid shadow rounded">
	<div class="row">
		<div class="col-12">
			<img src="@Model.Image_url" class="w-100" id="order-img" />
		</div>
	</div>
	<div class="row mt-2">
		<div class="col-sm-10 col-md-10 col-lg-10 col-xl-10">
			<h2 class="text-dark">@Model.Title</h2>
		</div>
		
	</div>
	<div class="row">
		<div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
			<div class="table-responsive p-2">
			<table class="table table-bordered">
				<thread>
					<tr>
						<th>Description</th>
						<th>Quantity</th>
						<th>unit</th>
					</tr>
				</thread>
				<tbody>
					@foreach (var ing in Model.Ingredients)
					{
						<tr>
						<td>@ing.Description</td>
						<td>@ing.Quantity</td>
						<td>@ing.unit</td>
						</tr>
					}
				</tbody>
			</table>
			</div>
		</div>
		<div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
			<div class="p-2">
				<p class="text-dark">Bill Details</p>
				<div class="row border-bottom text-muted">
					<label class="col-10 col-form-label">Price</label>
					<div class="col-2">
						<i class="fa-solid fa-indian-rupee-sign"></i>
						<span>150</span>
					</div>
				</div>
				<div id="qtySection" class="row border-bottom">
					<label class="col-9 col-form-label text-muted">Quantity</label>
					<div class="col-3 border border-success border-2 p-1 text-center rounded">
						<span><i class="fa-solid fa-plus text-success"></i></span>
						<input type="text" id="qty" class="bg-white text-center text-success fw-bold"
						value="1" readonly />
						<span><i class="fa-solid fa-minus text-success"></i></span>
					</div>
				</div>
				<div class="row border-bottom">
					<label class="col-10 col-form-label text-muted">Delivery Change</label>
					<label class="col-2 col-form-label text-success fw-bold">Free</label>
				</div>
				<div class="px-1 mb-2">
					<label class="form-label text-muted">Delivery Address</label>
					<textarea class="form-control" name="Address"></textarea>
				</div>
				<div class="row border-top border-dark border-1">
					<label class="col-10 col-form-label fs-5 fw-bold">Total</label>
					<div class="col-2">
						<i class="fa-solid fa-indian-rupee-sign"></i>
						150
					</div>
				</div>
			</div>
		</div>
	</div>
</div>